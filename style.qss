 /* -----------------TABWIDGET AND TABBAR---------------- */

QTabWidget {
    border: none;
}
 QTabWidget::pane { 
    border: none;
     position: absolute;
 }

  QTabWidget::tab-bar {
     left: 0px;
     /* min-width: 999999px */;
 }

 QTabBar::tab {
    color: #dddddd;
    border-left: 1px solid rgba(200,200, 200, 0.2);
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                 stop: 0 rgba(70, 75, 76, 255), 
                                 stop: 1 rgba(63,67,68,255));
    border-bottom-color: #C2C7CB; 
    border-top-left-radius: 4px;
    border-top-right-radius: 4px;
    padding: 10px;
 }

 QTabBar::tab:selected, QTabBar::tab:hover {
     background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                 stop: 0 rgba(80, 85, 86, 255), 
                                 stop: 1 rgba(73,77,78,255));
     color: #eeeeee;
 }

 QTabBar::tab:selected {
 	background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                 stop: 0 rgba(70, 75, 76, 255), 
                                 stop: 1 rgba(46,50,51,255));
    border-bottom: 3px solid rgba(43,170,192,255);
 }

QTabBar::close-button {     
    subcontrol-origin: padding;
    subcontrol-position: right bottom;
    image: url(:/closeBtn.png);
} 

QTabBar::close-button:hover {     
    background: rgba(130,130,130,255);
    border-radius : 6px;
} 

